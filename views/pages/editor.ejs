<html lang="fr">

<head>
  <%- include('../templates/headerGlobal'); %>
    <link rel="stylesheet" href="/css/editor.css">
    <title>editor - Laexo.tv</title>
</head>

<body class="bg-dark-laexo" onload="">
  <%- include('../templates/svgIcons'); %>
    <%- include('../templates/navbar');%>

      <div class="container-fluid px-1 py-5 mx-auto">
        <div class="row d-flex justify-content-center">
          <div class="col-xl-7 col-lg-8 col-md-9 col-11 text-center">
            <div class="card">
              <h5 class="text-center mb-4">Crée ta propre page d'évènement</h5>
              <form class="form-card" onsubmit="event.preventDefault()">


                <div class="row justify-content-between text-left">
                  <div class="form-group col-sm-4 flex-column d-flex">
                    <label class="form-control-label px-3">
                      Nom de l'URL<span class="text-danger"> *</span>
                    </label>
                    <input type="text" id="fname" name="fname" placeholder="Entrer le nom de la page">
                  </div>
                  <div class="form-group col-sm-4 flex-column d-flex">
                    <label class="form-control-label px-3">
                      Titre de l'évènement<span class="text-danger"> *</span>
                    </label>
                    <input type="text" id="fname" name="fname" placeholder="Entrer un titre">
                  </div>
                  <div class="form-group col-sm-4 flex-column d-flex">
                    <label for="selectType" class="form-label">
                      Type de l'évènement<span class="text-danger"> *</span>
                    </label>
                    <select id="selectType" class="form-select">
                      <option selected>Tournoi</option>
                      <option>Live</option>
                    </select>
                  </div>
                </div>
                <div class="form-group col-sm-6 flex-column d-flex" style="margin: auto;">
                  <label class="form-control-label px-3">
                    Mini Description<span class="text-danger"> *</span>
                  </label>
                  <textarea type="textarea" id="lname" name="lname"
                    placeholder="Entrer un petit description"></textarea>
                </div>
                <div class="row justify-content-between text-left">

                  <div class="form-group col-sm-6 flex-column d-flex">
                    <label for="file" class="form-control-label px-3">Miniture<span class="text-danger">
                        *</span></label> <input type="file" class="input-file" id="minia" name="minia" placeholder="">
                  </div>
                  <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Phone
                      number<span class="text-danger"> *</span></label> <input type="text" id="mob" name="mob"
                      placeholder=""> </div>
                </div>

                <div class="row justify-content-between text-left">
                  <div class="form-group col-sm-6 flex-column d-flex"> <label class="form-control-label px-3">Job
                      title<span class="text-danger"> *</span></label> <input type="text" id="job" name="job"
                      placeholder=""> </div>
                </div>

                <div class="row justify-content-between text-left">
                  <div class="form-group col-12 flex-column d-flex">
                    <label class="form-control-label px-3">What would you be using Flinks for?
                      <span class="text-danger"> *</span>
                    </label>
                    <input type="text" id="ans" name="ans" placeholder="">
                  </div>
                </div>

                <div class="row justify-content-end">

                  <div class="form-group col-sm-6">
                    <button type="submit" class="btn-block btn-primary">Valider la page</button>
                  </div>

                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
      <%- include('../templates/footer'); %>

        <style>
          .row {
            margin-top: 20px;
            margin-bottom: 20px;
          }

          .label-file {
            cursor: pointer;
            color: #00b1ca;
            font-weight: bold;
          }

          .label-file:hover {
            color: #25a5c4;
          }
        </style>

</body>

</html>